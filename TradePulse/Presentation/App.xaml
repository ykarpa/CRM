<Application x:Class="Presentation.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Presentation"
             xmlns:viewModel="clr-namespace:Presentation.ViewModels"
             xmlns:view="clr-namespace:Presentation.Views">
    <Application.Resources>
       <DataTemplate DataType="{x:Type viewModel:CategoriesViewModel}">
            <view:Categories/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:MainViewModel}">
            <view:MainWindow/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:ProductsViewModel}">
            <view:Products/>
        </DataTemplate>
    </Application.Resources>
</Application>
