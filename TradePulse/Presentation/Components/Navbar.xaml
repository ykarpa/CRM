             mc:Ignorable="d" 
             d:DesignHeight="58.974" d:DesignWidth="796.154">
    <Grid Background="#060542" Height="60" VerticalAlignment="Top">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="30,0,10,0">
