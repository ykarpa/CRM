<UserControl x:Class="Presentation.Views.ProfileModalDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation.Views"
             mc:Ignorable="d" 
             BorderThickness="0"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Rectangle Fill="Black" Opacity=".3" MouseDown="Rectangle_MouseDown"/>
        <Border CornerRadius="10" Background="White" Height="100" Width="100">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="15"/>    
                </Grid.RowDefinitions>

                <Button Grid.Row="0" Content="Мій профіль" Background="White" Grid.RowSpan="2" BorderThickness="0" Command="{Binding NavigateToProfile}"/>
                <Separator Grid.Row="1" BorderThickness="1" BorderBrush="Silver"/>
                <TextBlock Grid.Row="2" Text="Фінанси"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
