<UserControl x:Class="Presentation.Views.Categories"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation.Views"
             mc:Ignorable="d" 
             d:DesignHeight="690" d:DesignWidth="1280">
    <Grid>
        <!-- Карточки товарів з бази даних -->
        <TextBlock Text="Категорії" FontSize="32" FontWeight="SemiBold"  Margin="30,10,0,0" Foreground="#FF060542"/>
        <ListBox ItemsSource="{Binding Products}" Margin="30,60,30,30" >
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="4" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Background="#B0C2E6" Width="250" Height="300" Margin="17" Padding="0">
                        <StackPanel>
                            <Button Background="#B0C2E6" Width="250" Height="300"  Content="{Binding Title}" Command="{Binding NavigateToDetails}"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
