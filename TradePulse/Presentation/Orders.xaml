<Window x:Class="Presentation.Orders"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation"
        mc:Ignorable="d"
        Title="Orders" Height="720" Width="1280" Background="#C4D0E8">
    
       <Grid>
            <!-- Навбар -->
            <Grid Background="#060542" Height="60" VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="30,0,10,0">
                    <TextBlock Foreground="White" FontSize="16" VerticalAlignment="Center"  Margin="0,0,10,0">LOGO</TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center"  Margin="10,0,10,0">
                    <TextBox Width="250" Height="30"  Margin="0,0,10,0" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right"  Margin="0,0,30,0">
                <Button Content="КатегоріЇ" Height="30" Margin="10,0,0,0" Click="CategoriesButton_Click"/>
                    <Button Content="Корзина" Height="30" Margin="10,0,0,0" />
                    <Button Content="Профіль" Height="30" Margin="10,0,0,0" />
                </StackPanel>
            </Grid>

        <TextBlock Text="Аксесуари" FontSize="32" FontWeight="SemiBold"  Margin="30,70,0,0" Foreground="#FF060542"/>

        <!-- Карточки товарів з бази даних -->
        <ListBox ItemsSource="{Binding Products}" Margin="30,120,30,30">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Background="#B0C2E6" Width="250" Height="300" Margin="0,0,10,10">
                        <!-- Заголовок -->
                        <TextBlock Text="{Binding Title}" FontSize="20" FontWeight="Bold" Margin="10,10,10,0"/>
                        <!-- Текст -->
                        <TextBlock Text="{Binding Description}" Margin="10,5,10,0"/>
                        <!-- Лінія -->
                        <Line Stroke="Black" X1="10" Y1="0" X2="240" Y2="0" StrokeThickness="2" Margin="0,5,0,5"/>
                        <!-- Ціна -->
                        <TextBlock Text="Ціна" FontSize="18" FontWeight="Bold" Margin="10,5,10,0"/>
                        <TextBlock Text="{Binding Price}" Margin="10,0,10,0"/>
                        <!-- Текст1 -->
                        <TextBlock Text="Текст1: {Binding Text1}" Margin="10,5,10,0"/>
                        <!-- Текст2 -->
                        <TextBlock Text="Текст2: {Binding Text2}" Margin="10,0,10,0"/>
                        <!-- Лінія -->
                        <Line Stroke="Black" X1="10" Y1="0" X2="240" Y2="0" StrokeThickness="2" Margin="0,5,0,5"/>
                        <!-- Наявність -->
                        <TextBlock Text="Наявність: {Binding Availability}" Margin="10,5,10,10"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>



    </Grid>
    
</Window>
